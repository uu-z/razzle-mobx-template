{
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "es2015", "es2017", "dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": false,
    "declaration": false,
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2018"
    // "typeRoots": ["node_modules/@types", "types"]
  },
  // "include": ["src/**/*.ts", "typings/**/*.ts"],
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest", "razzle.config.js", "generated"]
  // "types": ["typePatches", "node", "webpack-env"]
}
